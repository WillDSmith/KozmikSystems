<style>
    .page-header-mod {
        padding-bottom: 9px;
        margin: 20px 0 10px;
    }
</style>
@{
    ViewBag.Title = "Create";
}
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header-mod">Employee Portal</h3>
    </div>
</div>

<div ng-controller="kscontroller">
    <div class="panel with-nav-tabs panel-default">
        <div class="panel-heading">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs responsive" role="tablist">
                <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab"><i class="fa fa-list-alt fa-fw"></i>Employee List</a></li>
                <li role="presentation"><a href="#addemployee" aria-controls="profile" role="tab" data-toggle="tab"><i class="fa fa-plus fa-fw"></i>Add Employee</a></li>
                @*<li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">Messages</a></li>
                    <li role="presentation"><a href="#settings" aria-controls="settings" role="tab" data-toggle="tab">Settings</a></li>*@
            </ul><br />

            <!-- Tab panes -->
            <div class="tab-content responsive">
                <div role="tabpanel" class="tab-pane active" id="home">
                    <div class="panel panel-default ">
                        @*pre-scrollable*@
                        <table class="table table-striped table-bordered table-responsive table-condensed table-hover">
                            <thead>
                                <tr>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Position</th>
                                    <th>Department</th>
                                    <th>Date Hired</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="e in Employees">
                                    <td>{{e.FirstName}}</td>
                                    <td>{{e.LastName}}</td>
                                    <td>{{e.Position}}</td>
                                    <td>{{e.Department}}</td>
                                    <td>{{e.DateHired | date}}</td>
                                    <td style="width:250px;">
                                        <a href="#" class="btn btn-success" data-toggle="modal" data-target="#Details" ng-click="get(emp)">Details</a>
                                        <a href="#" class="btn btn-info" data-toggle="modal" data-target="#Update" ng-click="get(emp)">Update</a>
                                        <a href="#" class="btn btn-danger" id="btnDelete" data-toggle="modal" data-target="#deleteDialog" ng-click="get(emp)">Delete</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane" id="addemployee">
                    <form class="form-horizontal" name="AddNewForm">

                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="text-info">First Name</label>
                                        <input class="form-control" name="FirstName" ng-model="FirstName" type="text" placeholder="First Name" required />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="text-info">Last Name</label>
                                        <input class="form-control" name="LastName" ng-model="LastName" type="text" placeholder="Last Name" required />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label class="text-info">Position</label>
                                        <input class="form-control" name="Position" ng-model="Position" type="text" placeholder="Position" required />
                                    </div>
                                </div>
                                <div class="col-md-2">

                                </div>

                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label class="text-info">Department</label>
                                        <input class="form-control" name="Department" ng-model="Department" type="text" placeholder="Department" required />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" id="btnSave" data-dismiss="modal" ng-click="save()">Save</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

                @*<div role="tabpanel" class="tab-pane" id="messages">...</div>
                    <div role="tabpanel" class="tab-pane" id="settings">...</div>*@
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/MyScripts/Controller.js"></script>
    <script src="~/Scripts/MyScripts/Service.js"></script>
    <script type="text/javascript">
        (function ($) {
            fakewaffle.responsiveTabs(['xs', 'sm']);
        })(jQuery);
    </script>
}

